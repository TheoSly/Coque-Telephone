{% extends 'base.twig' %}

	{% block banniere %}
		<img width="100%" height="300px" class="object-fit-cover" src="./image/site/back.png" alt="banniere"/>
		<h1 class="fs-1 fw-bold text-center text-white" style="margin-top: -200px; margin-bottom: 200px;">Les partitions</h1>
	{% endblock %}	

{% block page %}
	<div class="flex-column" style="width: 1200px;">
		<div class="mb-5 position-relative">
			<a href="controleur.php?page=article&action=readpoprock" class="btn" style="border-color: #5627A6 ; color: #5627A6">Pop/Rock</a>
			<a href="controleur.php?page=article&action=readjazz" class="btn" style="background-color: #5627A6 ; color: white">Jazz</a>
			<a href="controleur.php?page=article&action=readpopus" class="btn" style="border-color: #5627A6 ; color: #5627A6">Pop US</a>
			<a href="controleur.php?page=article&action=readmusiquedefilm" class="btn" style="border-color: #5627A6 ; color: #5627A6">Musique de Film</a>
			<a href="controleur.php?page=article&action=readrap" class="btn" style="border-color: #5627A6 ; color: #5627A6">Rap</a>
			<a href="controleur.php?page=article&action=read" class="btn text-danger" ><i class="bi bi-x-circle"></i></a>
		</div>
		<div class="row" style="">
			{% for article in articles %}
				<div class="col-12 col-sm-6 col-lg-4 mb-5">
					<div class="card" style="width: 18rem;">
						<iframe class="card-img-top" src="./image/uploads/{{ article.chapeau }}" width="250px" height="300px" frameborder="0"> </iframe>
						<div class="card-body">
							<a><h5 class="card-title">{{ article.titre }}</h5></a>
							<p class="card-text">Partition créé par {{ article.auteur }}</p>
							<a href="controleur.php?page=article&action=detailread&id={{ article.id }}" class="btn" style="background-color: #A566EB ; color: white">+ de détails</a>
							<form action="historiquedownload.php" method="post">
									<input type="hidden" name="id_download" value="{{ article.id }}">
									<input type="hidden" name="chapeau" value="{{ article.chapeau }}">
									<button class="btn mt-2" style="background-color: #FE4682 ; color: white" type="submit" name="send">Télécharger</button>
							</form>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
