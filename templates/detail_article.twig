{% extends 'base.twig' %}

	{% block banniere %}
		<img width="100%" height="300px" class="object-fit-cover" src="./image/site/back.png" alt="banniere"/>
		<h1 class="fs-1 fw-bold text-center text-white" style="margin-top: -200px; margin-bottom: 200px;">{{ article.titre }}</h1>
	{% endblock %}		


	{% block page %}
		<div class="d-flex">
			<div class="navaside">
				<b>Les partitions: </b>
				{% for tousarticle in tousarticle %}
					<hr>
					<a class="text-decoration-none" style="color: #5627A6" href="controleur.php?page=article&action=detailread&id={{ tousarticle.id }}"><p>{{ tousarticle.titre }}</p></a>
				{% endfor %}
			</div>
			<div class="card d-flex flex-row ms-5" style="width: 800px;">
				<div>
					<iframe class="card-img-left" src="./image/uploads/{{ article.chapeau }}" width="350px" height="480px" frameborder="0"> </iframe>
				</div>
				<div class="card-body" style="width: 600px;">
					<a><h5 class="card-title">{{ article.titre }}</h5></a>
					<p class="card-text">Partition créé par {{ article.auteur }}</p>
					{% for element in element %}
					<{{ element.balise }} style="width: 300px;" alt="{{ element.alt }}" class="image {{ element.class }} {{ element.font }}" src="./image/uploads/{{ element.src }}" >{{ element.contenu }}</{{ element.balise }}>
					{% endfor %}
					<form action="controleur.php?page=article&action=historiquedownload" method="post">
						<input type="hidden" name="id_download" value="{{ article.id }}">
						<input type="hidden" name="chapeau" value="{{ article.chapeau }}">
						<button class="btn mt-2" style="background-color: #FE4682 ; color: white" type="submit" name="send">Télécharger</button>
					</form>
				</div>
			</div>
		</div>
	{% endblock %}

