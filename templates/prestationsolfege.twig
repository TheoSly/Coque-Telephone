{% extends 'base.twig' %}

	{% block banniere %}
		<img width="100%" height="300px" class="object-fit-cover" src="./image/site/back.png" alt="banniere"/>
		<h1 class="fs-1 fw-bold text-center text-white" style="margin-top: -200px; margin-bottom: 200px;">Les cours</h1>
	{% endblock %}	

{% block page %}
	<div class="flex-column" style="width: 1200px;">
		<div class="mb-5 position-relative">
			<a href="controleur.php?page=prestation&action=readsolfege" class="btn" style="background-color: #5627A6 ; color: white">Solfège</a>
			<a href="controleur.php?page=prestation&action=readvoix" class="btn" style="border-color: #5627A6 ; color: #5627A6">Voix</a>
			<a href="controleur.php?page=prestation&action=readpiano" class="btn" style="border-color: #5627A6 ; color: #5627A6">Piano</a>
			<a href="controleur.php?page=prestation&action=readguitare" class="btn" style="border-color: #5627A6 ; color: #5627A6">Guitare</a>
			<a href="controleur.php?page=prestation&action=readbasse" class="btn" style="border-color: #5627A6 ; color: #5627A6">Basse</a>
			<a href="controleur.php?page=prestation&action=readbatterie" class="btn" style="border-color: #5627A6 ; color: #5627A6">Batterie</a>
			<a href="controleur.php?page=prestation&action=read" class="btn text-danger"><i class="bi bi-x-circle"></i></a>
		</div>
		<div class="row" style="">
			{% for prestation in prestations %}
				<div class="col-12 col-sm-6 col-lg-4 mb-5">
					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<a><h5 class="card-title">{{ prestation.titre }}</h5></a>
							<p class="card-text">Cours créé par {{ prestation.auteur }}</p>
							<a href="controleur.php?page=prestation&action=detailread&id={{ prestation.id }}" class="btn" style="background-color: #A566EB ; color: white">+ de détails</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div> 
	</div>
{% endblock %}
