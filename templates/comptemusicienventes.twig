{% extends 'comptemusicien.twig' %}

	{% block banniere %}
		<img width="100%" height="300px" class="object-fit-cover" src="./image/site/back.png" alt="banniere"/>
		<h1 class="fs-1 fw-bold text-center text-white" style="margin-top: -200px; margin-bottom: 200px;">Compte Musicien</h1>
	{% endblock %}	

{% block compte %}
			<div class="d-flex flex-column ms-5 ps-5">
					<h3>Mes ventes ajoutées :</h3>
					<div class="row border p-3" style="width: 800px;">
						{% for vente in ventes %}
							<div class="col-12 col-sm-6 col-lg-6 mb-5">
								<div class="card" style="width: 18rem;">
									<img class="card-img-top" src="./image/uploads/{{ vente.chapeau }}" width="250px" height="300px" frameborder="0"> </img>
									<div class="card-body">
										<a><h5 class="card-title">{{ vente.titre }}</h5></a>
										<p class="card-text">vente créé par {{ vente.auteur }}</p>
										<a href="controleur.php?page=vente&action=detailread&id={{ vente.id }}" class="btn mb-2" style="background-color: #A566EB ; color: white">+ de détails</a>
										<br>
										<a href="controleur.php?page=vente&action=edit&id={{ vente.id }}" class="btn btn-outline-warning">Modifier</a>
										<a href="controleur.php?page=vente&action=delete&id={{ vente.id }}" class="btn btn-outline-danger">Supprimmer</a>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
			</div>
{% endblock %}

