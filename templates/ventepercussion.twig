{% extends 'base.twig' %}

	{% block banniere %}
		<img width="100%" height="300px" class="object-fit-cover" src="./image/site/back.png" alt="banniere"/>
		<h1 class="fs-1 fw-bold text-center text-white" style="margin-top: -200px; margin-bottom: 200px;">Ventes d'occasion</h1>
	{% endblock %}	

{% block page %}
	<div class="flex-column" style="width: 1200px;">
		<div class="mb-5 position-relative">
			<a href="controleur.php?page=vente&action=readcorde" class="btn" style="border-color: #5627A6 ; color: #5627A6">Instrument à corde</a>
			<a href="controleur.php?page=vente&action=readvent" class="btn" style="border-color: #5627A6 ; color: #5627A6">Instrument à vent</a>
			<a href="controleur.php?page=vente&action=readpercussion" class="btn" style="background-color: #5627A6 ; color: white">Percussion</a>
			<a href="controleur.php?page=vente&action=read" class="btn text-danger"><i class="bi bi-x-circle"></i></a>
		</div>
		<div class="row" style="">
			{% for vente in ventes %}
				<div class="col-12 col-sm-6 col-lg-4 mb-5">
					<div class="card" style="width: 18rem;">
						<img class="card-img-top" src="./image/uploads/{{ vente.chapeau }}" width="250px" height="300px" frameborder="0"> </img>
						<div class="card-body">
							<a><h5 class="card-title">{{ vente.titre }}</h5></a>
							<p class="card-text">Partition créé par {{ vente.auteur }}</p>
							<a href="controleur.php?page=vente&action=detailread&id={{ vente.id }}" class="btn" style="background-color: #A566EB ; color: white">+ de détails</a>
							<a href="controleur.php?page=vente&action=detailread&id={{ vente.id }}" class="btn" style="background-color: #FE4682 ; color: white">Acheter</a>					</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
