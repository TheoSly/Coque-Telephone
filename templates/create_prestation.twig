{% extends 'base.twig' %}

	{% block banniere %}
		<img width="100%" height="300px" class="object-fit-cover" src="./image/site/back.png" alt="banniere"/>
		<h1 class="fs-1 fw-bold text-center text-white" style="margin-top: -200px; margin-bottom: 200px;">Création de Cours</h1>
	{% endblock %}	

{% block page %}
    <div class="d-flex">
        <div>
            <h3>Remplissez le formulaire pour créer un cours !</h3>
            <form action="controleur.php?page=prestation&action=create" method="post">
                <div class="groupe">
                    <i style="color: #A566EB" class="bi bi-chat-dots-fill"></i>
                    <label class="form-label">Titre du cours</label>
                    <input class="form-control mb-2" type="text" name="titre" placeholder="Saisir un titre">
                </div>
                <div class="groupe">
                    <i style="color: #A566EB" class="bi bi-person-circle"></i>
                    <label class="form-label">Nom / Prénom de l'auteur</label>
                    <input class="form-control mb-2" type="text" name="auteur" placeholder="Saisir un auteur">
                 </div>
                <div class="groupe">
                    <i style="color: #A566EB" class="bi bi-caret-down-fill iselect"></i>
                    <label class="form-label">Choisir la catégorie</label>
                    <select class="form-select" name="id_categorie" class="select">
                        <option value="1">Solfège</option>
                        <option value="2">Voix</option>
                        <option value="3">Piano</option>
                        <option value="4">Guitare</option>
                        <option value="5">Basse</option>
                        <option value="6">Batterie</option>
                    </select>
                </div>
                <button class="btn mt-2" style="background-color: #5627A6 ; color: white" type="submit" value="Envoyer">Ajouter</button>
            </form>
        </div>
        <div class="ms-5">
        	<h4 class="ms-5">Exemple de mis en forme :</h4>
            <hr>
            <div class="card d-flex flex-row">
				<div class="card-body">
					<a><h5 class="card-title">Titre du cours</h5></a>
					<p class="card-text">Partition créé par Nom / Prénom</p>
                    <i class="card-text">Liste des éléments</i>
				</div>
				<div>
					<form style="width: 200px;" class="p-4 bg-body-secondary rounded-end" action="send.php" method="post">
							<h5>Réserver le cours</h5>
							<label class="form-label">Nom / Prénom</label>
							<input class="form-control" type="text" name="nom" value="" placeholder="Saisir votre nom et prenom">
							<label label class="form-label mt-2">Adresse Email</label>
							<input class="form-control" type="email" name="email" value="" placeholder="Saisir votre email">
							<label class="form-label mt-2">Message</label>
							<input class="form-control" type="text" name="message" value="" placeholder="Saisir votre message">
							<button class="btn mt-2" style="background-color: #FE4682 ; color: white" type="submit" name="send">Envoyer</button>
					</form>
				</div>
			</div>
        </div>
    </div>


    
{% endblock %}





